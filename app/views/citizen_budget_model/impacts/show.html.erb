<% content_for :breadcrumb do %>
<ol class="breadcrumb">
  <li><%= link_to _('Sensitivity Tables'), sensitivities_path %></li>
  <li><%= link_to @sensitivity.name, @sensitivity%></li>
  <li><%= link_to @sensitivity_section.name, [@sensitivity, @sensitivity_section] %></li>

  <li class="active"><%= @impact.name %>
    <%= link_to [:edit, @sensitivity, @sensitivity_section, @impact], class: 'btn btn-default btn-xs', title: _('Edit') do %>
      <span class="glyphicon glyphicon-pencil"></span>
    <% end %>
    <%= link_to new_sensitivity_sensitivity_section_impact_path(@sensitivity, @sensitivity_section), class: 'btn btn-default btn-xs' do %>
      <span class="glyphicon glyphicon-plus"></span> <%= _('Add an impact') %>
    <% end %>
    <%= link_to new_sensitivity_sensitivity_section_path(@sensitivity), class: 'btn btn-default btn-xs' do %>
      <span class="glyphicon glyphicon-plus"></span> <%= _('Add a section') %>
    <% end %>
  </li>
</ol>
<% end %>

<% if @impact.any_of?(:name, :machine_name) %>
<div class="panel panel-primary">
  <div class="panel-heading panel-title">
    <%= _('Economic Measures') %>
  </div>
  <div class="panel-body">
    <%= render partial: 'citizen_budget_model/shared/translated_field', locals: {record: @impact, attribute: :name} %>
    <%= render partial: 'citizen_budget_model/shared/field', locals: {record: @impact, attribute: :machine_name} %>
  </div>
  <div class="panel-body">
    <% year = '' %>
    <% @impact.impact_variables.each do |variable| %>
      <%= year != variable.year ? "<legend>#{variable.year}</legend>".html_safe : '' %>
      <% year = variable.year %>

      <i><%= variable.variable.name %></i>
      <div class="row">
        <div class="col-lg-4">
          <%= render partial: 'citizen_budget_model/shared/field', locals: {record: variable, attribute: :coefficient} %>
        </div>
        <div class="col-lg-8">
        <%= render partial: 'citizen_budget_model/shared/field', locals: {record: variable, attribute: :prepopulated_result} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<% end %>

